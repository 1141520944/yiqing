.flex-center {
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.container {
  display: block;
}
.ui-all {
  padding: 20rpx 40rpx;
}
.ui-all .avatar {
  width: 100%;
  text-align: left;
  padding: 20rpx 0;
  border-bottom: solid 1px #f2f2f2;
  position: relative;
}
.ui-all .avatar .imgAvatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
}
.ui-all .avatar .imgAvatar .iavatar {
  width: 100%;
  height: 100%;
  display: block;
}
.ui-all .avatar text {
  display: inline-block;
  vertical-align: middle;
  color: #8e8e93;
  font-size: 28rpx;
  margin-left: 40rpx;
}
.ui-all .avatar:after {
  content: ' ';
  width: 20rpx;
  height: 20rpx;
  border-top: solid 1px #030303;
  border-right: solid 1px #030303;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  /* IE 9 */
  -moz-transform: rotate(45deg);
  /* Firefox */
  -webkit-transform: rotate(45deg);
  /* Safari 和 Chrome */
  -o-transform: rotate(45deg);
  position: absolute;
  top: 85rpx;
  right: 0;
}
.ui-all .ui-list {
  width: 100%;
  text-align: left;
  padding: 20rpx 0;
  border-bottom: solid 1px #f2f2f2;
  position: relative;
}
.ui-all .ui-list text {
  color: #4a4a4a;
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  min-width: 150rpx;
}
.ui-all .ui-list input {
  color: #030303;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
}
.ui-all .ui-list button {
  color: #030303;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
  background: none;
  margin: 0;
  padding: 0;
}
.ui-all .ui-list button::after {
  display: none;
}
.ui-all .ui-list picker {
  width: 90%;
  color: #030303;
  font-size: 30rpx;
  display: inline-block;
  vertical-align: middle;
  position: absolute;
  top: 30rpx;
  left: 150rpx;
}
.ui-all .ui-list textarea {
  color: #030303;
  font-size: 30rpx;
  vertical-align: middle;
  height: 150rpx;
  width: 100%;
  margin-top: 50rpx;
}
.ui-all .ui-list .place {
  color: #999999;
  font-size: 28rpx;
}
.ui-all .right:after {
  content: ' ';
  width: 20rpx;
  height: 20rpx;
  border-top: solid 1px #030303;
  border-right: solid 1px #030303;
  transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  /* IE 9 */
  -moz-transform: rotate(45deg);
  /* Firefox */
  -webkit-transform: rotate(45deg);
  /* Safari 和 Chrome */
  -o-transform: rotate(45deg);
  position: absolute;
  top: 40rpx;
  right: 0;
}
.ui-all .save {
  background: #030303;
  border: none;
  color: #ffffff;
  margin-top: 40rpx;
  font-size: 28rpx;
}

